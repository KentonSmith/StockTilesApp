<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:layout_marginTop = "10dp"
            android:id="@+id/stock_ticker_label"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="175dp"
            android:layout_height="35dp"
            android:id="@+id/stock_ticker_price"
            android:layout_below = "@+id/stock_ticker_label"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="175dp"
            android:layout_height="35dp"
            android:id="@+id/stock_ticker_price_change"
            android:layout_below = "@+id/stock_ticker_price"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="175dp"
            android:layout_height="35dp"
            android:id="@+id/stock_ticker_percentage_change"
            android:layout_below = "@+id/stock_ticker_price_change"
            android:gravity="center_horizontal"/>

    </RelativeLayout>

    </android.support.v7.widget.CardView>
