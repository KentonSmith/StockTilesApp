<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/mainLayout">


    <EditText
        android:layout_marginTop="50dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/enter_ticker"
        android:hint="@string/hint"
       />

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text = "@string/add"
       android:id="@+id/add_button"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/enter_ticker"
       android:layout_marginTop="50dp"
       android:onClick = "onAddButtonClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/delete"
        android:id="@+id/delete_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/add_button"
        android:layout_marginTop="25dp"
        android:onClick = "onDeleteButtonClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/list"
        android:id="@+id/list_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/delete_button"
        android:layout_marginTop="25dp"
        android:onClick = "onListButtonClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/complex_list"
        android:id = "@+id/complex_list_button"
        android:layout_centerHorizontal="true"
        android:layout_below = "@+id/list_button"
        android:layout_marginTop="25dp"
        android:onClick = "onComplexListButtonClicked"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/complex_list_button"
        android:id = "@+id/list_results"
        android:layout_marginTop="25dp"/>

</RelativeLayout>
</ScrollView>